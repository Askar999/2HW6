<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/green"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/UserName"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="70dp"
        android:text="UserName   Trivia"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/Register"/>

    <TextView
        android:id="@+id/Email"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="70dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/UserName"/>

    <TextView
        android:id="@+id/Password"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_marginHorizontal="20dp"
        android:layout_height="70dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/Email"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:text="NEXT"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_marginHorizontal="20dp"
        android:paddingLeft="150dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Password" />

    <ImageView
        android:id="@+id/Gerb"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:scrollbarSize="15dp"
        android:src="@drawable/Otrocineves"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="490dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Trivia"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Gerb"
        tools:layout_editor_absoluteX="151dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="395dp"
        android:scrollbarSize="25dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:src="@drawable/question_mark_PNG52"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:layout_editor_absoluteX="50dp"
        app:layout_editor_absoluteY="500dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:layout_editor_absoluteX="300dp"
        app:layout_editor_absoluteY="450dp"
        android:src="@drawable/question_mark_PNG52"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>